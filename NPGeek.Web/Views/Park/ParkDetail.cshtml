@model NPGeek.Web.Models.Park

@{
    ViewBag.Title = "ParkDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form action="~/Views/Park/ParkDetail.cshtml" method="get">
    <div class="detail-container">
        <img src="~/Content/img/parks/@(Model.ParkCode).jpg" />
             <div class="parkdetail-box">
            <h3>@Model.ParkName</h3>
            <h5>@Model.State</h5>
            <p>@Model.ParkDescription</p>
            <p>@Model.MilesOfTrail</p>
            <p>@Model.Acreage</p>
            <p>@Model.Elevation</p> 
            <p>@Model.NumberOfCampsites</p>
            <p>@Model.Climate</p>
            <p>@Model.YearFounded</p>
            <p>@Model.AnnualVisitorCount</p>
            <p>@Model.EntryFee</p>
            <p>@Model.NumberOfAnimalSpecies</p>
            <blockquote>@Model.InspirationalQuote</blockquote>
            <h4>@Model.InspirationalQuoteSource</h4>
        </div>
    </div>
</form>


<div>
    @Html.Action("WeatherDisplay")
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
</div>


